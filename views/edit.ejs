<%- include('partials/header') %>

<main class="hero workouts-hero">
  <h2 class="workouts-heading-main">Update Workout</h2>

  <div class="workouts-wrapper">
    <div class="workouts-card">
      <form
        method="post"
        action="/workouts/edit/<%= book._id %>"
        autocomplete="off"
      >
        <!-- Name -->
        <div class="form-group">
          <label for="Name">Name</label>
          <input
            type="text"
            id="Name"
            name="Name"
            class="form-control"
            placeholder="Enter the workout name"
            value="<%= book.Name %>"
            required
          >
        </div>

        <!-- Type -->
        <div class="form-group">
          <label for="Type">Type</label>
          <input
            type="text"
            id="Type"
            name="Type"
            class="form-control"
            placeholder="Enter the workout type"
            value="<%= book.Type %>"
            required
          >
        </div>

        <!-- Duration -->
        <div class="form-group">
          <label for="Duration">Duration (in minutes)</label>
          <input
            type="number"
            id="Duration"
            name="Duration"
            class="form-control"
            placeholder="Enter the workout duration"
            value="<%= book.Duration %>"
            required
          >
        </div>

        <!-- Date -->
        <div class="form-group">
          <label for="Date">Date</label>
          <input
            type="date"
            id="Date"
            name="Date"
            class="form-control"
            value="<%= book.Date ? book.Date.toISOString().substring(0, 10) : '' %>"
            required
          >
        </div>

        <!-- Buttons (only once, at the bottom) -->
        <div class="form-actions">
          <button type="submit" class="action-btn edit-btn">
            Update Workout
          </button>
          <a href="/workouts" class="action-btn cancel-btn">
            Cancel
          </a>
        </div>
      </form>
    </div>
  </div>
</main>

<%- include('partials/footer') %>
