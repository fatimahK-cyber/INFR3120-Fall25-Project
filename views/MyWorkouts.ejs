<% const page = 'list'; %> <!-- Current page identifier -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>My Workouts</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>

<header class="header">
    <!-- Logo and site name -->
    <div class="logo">
        <img src="/images/logo-workit.PNG" alt="Workit Logo" class="logo-img">
        <h1 class="site-name">Workit</h1>
    </div>

    <!-- Navigation menu -->
    <nav class="nav">
        <a href="/" class="nav-link">Home</a>
        <a href="/workouts/add" class="nav-link">Add Workout</a>
        <a href="/workouts" class="nav-link nav-link-active">My Workouts</a>
    </nav>
</header>

<main class="hero workouts-hero">
    <h2 class="workouts-heading-main">Your Workouts</h2>

    <% if (workouts.length === 0) { %>
        <!-- Message if no workouts exist -->
        <p class="description">
            You don't have any workouts yet.
            <a href="/workouts/new">Add your first workout</a> to get started.
        </p>
    <% } else { %>
        <!-- Display workouts table -->
        <div class="workouts-wrapper">
            <div class="workouts-card">
                <h3 class="workouts-title">Workout Summary</h3>
                <table class="workouts-table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Type</th>
                            <th>Duration</th>
                            <th>Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% workouts.forEach(w => { %>
                        <tr>
                            <td><%= w.name %></td>
                            <td><%= w.type %></td>
                            <td><%= w.duration %> min</td>
                            <td><%= w.date %></td>
                            <td class="workouts-actions">
                                <!-- Edit and Delete buttons -->
                                <a href="/workouts/<%= w.id %>/edit" class="action-btn edit-btn">Edit</a>
                                <form action="/workouts/<%= w.id %>/delete" method="POST">
                                    <button type="submit" class="action-btn delete-btn"
                                            onclick="return confirm('Delete this workout?');">
                                        Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    <% } %>
</main>

<footer>
    <p>&copy; 2025 Workit Â· INFR3120 Project</p>
</footer>

</body>
</html>
