<%- include('partials/header') %>

<main class="hero">
  <% if (message && message.length > 0) { %>
    <p class="auth-message"><%= message %></p>
  <% } %>

  <section class="form-card">
    <h2 class="page-title">Please Sign In</h2>

    <form method="post" autocomplete="off" class="auth-form">
      <div class="form-row">
        <label for="username">Username</label>
        <input
          type="text"
          class="form-control auth-input"
          name="username"
          placeholder="Enter username"
          id="username"
          required
          autofocus
        >
      </div>

      <div class="form-row">
        <label for="password">Password</label>
        <input
          type="password"
          class="form-control auth-input"
          name="password"
          placeholder="Enter password"
          id="password"
          required
        >
      </div>

      <p class="auth-helper">
        Donâ€™t have an account?
        <a href="/signup">Register here</a>
      </p>
                <fieldset class="form-group">
                    <label for="password"></label>
                    <input 
                        type="password" 
                        class="form-control"
                        name="password"
                        placeholder="Enter password"
                        id="password"
                        required
                    >
                    or <a href="/signup">Register here</a>
                </fieldset>

                <fieldset class="form-group text-right">
                    <input 
                        type="submit" 
                        class="btn btn-success" 
                        value="Sign In"
                    >
                    <input 
                        type="button" 
                        class="btn btn-warning" 
                        value="Cancel"
                        onclick="window.location='/'"
                    >

                    <a href="/auth/google" class="btn btn-danger">Login with Google</a>
                    <a href="/auth/github" class="btn btn-dark">Login with GitHub</a>
                    <a href="/auth/microsoft" class="btn btn-dark">Login with Microsoft</a>
                    

                </fieldset>
            </form>

        </div>
    </div>
    <%- include('partials/footer') %>

      <div class="form-actions">
        <button type="submit" class="btn hero-btn">Sign In</button>
        <button
          type="button"
          class="btn btn-warning"
          onclick="window.location='/'"
        >
          Cancel
        </button>
      </div>
    </form>
  </section>
</main>

<%- include('partials/footer') %>
