<%- include('partials/header') %>

<main class="hero">
  <% if (message && message.length > 0) { %>
    <p class="auth-message"><%= message %></p>
  <% } %>

  <section class="form-card">
    <h2 class="page-title">Please Sign In</h2>

    <form method="post" autocomplete="off" class="auth-form">
      <div class="form-row">
        <label for="username">Username</label>
        <input
          type="text"
          id="username"
          name="username"
          class="auth-input"
          placeholder="Enter username"
          required
          autofocus
        >
      </div>

      <div class="form-row">
        <label for="password">Password</label>
        <input
          type="password"
          id="password"
          name="password"
          class="auth-input"
          placeholder="Enter password"
          required
        >
      </div>

      <p class="auth-helper">
        Donâ€™t have an account?
        <a href="/signup">Register here</a>
      </p>

      <div class="form-actions">
        <button type="submit" class="btn hero-btn">Sign In</button>
        <button
          type="button"
          class="btn btn-secondary"
          onclick="window.location='/'"
        >
          Cancel
        </button>
      </div>

      <!-- optional: keep social logins but WITHOUT extra inputs -->
       <div class="oauth-links">
        <span>Or sign in with:</span>
        <a href="/auth/google" class="oauth-btn google">Google</a>
        <a href="/auth/github" class="oauth-btn github">GitHub</a>
        <a href="/auth/microsoft" class="oauth-btn microsoft">Microsoft</a>
      </div>


    </form>
  </section>
</main>

<%- include('partials/footer') %>
