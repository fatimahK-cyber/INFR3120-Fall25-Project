<%- include('partials/header') %>

<main class="hero">
  <section class="form-card">
    <h2 class="page-title">Create Your Account</h2>
    <h3 class="page-subtitle">Please Sign Up</h3>

    <% if (error) { %>
      <p class="auth-message"><%= error %></p>
    <% } %>

    <form method="post" autocomplete="off" class="auth-form">
      <div class="form-row">
        <label for="username">Username</label>
        <input
          type="text"
          class="form-control auth-input"
          name="username"
          placeholder="Enter username"
          id="username"
          required
          autofocus
        >
      </div>

      <div class="form-row">
        <label for="email">Email</label>
        <input
          type="email"
          class="form-control auth-input"
          name="email"
          placeholder="Enter email"
          id="email"
          required
        >
      </div>

      <div class="form-row">
        <label for="password">Password</label>
        <input
          type="password"
          class="form-control auth-input"
          name="password"
          placeholder="Enter password"
          id="password"
          required
        >
      </div>

      <div class="form-row">
        <label for="confirmPassword">Confirm password</label>
        <input
          type="password"
          class="form-control auth-input"
          name="confirmPassword"
          placeholder="Confirm password"
          id="confirmPassword"
          required
        >
      </div>

      <div class="form-actions">
        <button type="submit" class="btn hero-btn">Sign Up</button>
        <button
          type="button"
          class="btn btn-warning"
          onclick="window.location='/'"
        >
          Cancel
        </button>
      </div>

      <p class="auth-helper">
        Already have an account?
        <a href="/signin">Sign In</a>
      </p>
    </form>
  </section>
</main>

<%- include('partials/footer') %>
